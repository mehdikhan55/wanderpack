<%layout("/layouts/boilerplate")%>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">Login</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="POST" class="needs-validations" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input required type="text" id="username" name="username" class="form-control" />
        
                    <div class="invalid-feedback">Username required!</div>
                </div>


                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input required type="password" id="password" name="password" class="form-control" />
                    
                    <div class="invalid-feedback">Password required!</div>
                </div>

                <button class="btn btn-success">Login</button>

            </form>
        </div>
    </div>